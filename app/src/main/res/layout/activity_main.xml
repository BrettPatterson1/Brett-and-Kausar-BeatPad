<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:background="@drawable/blue_button"
        android:id="@+id/pad2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="pad2"
        app:layout_constraintBottom_toTopOf="@+id/pad5"
        app:layout_constraintEnd_toStartOf="@+id/pad3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pad1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:background="@drawable/blue_button"
        android:id="@+id/pad3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:onClick="pad3"
        app:layout_constraintBottom_toTopOf="@+id/pad6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pad2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:background="@drawable/blue_button"
        android:id="@+id/pad1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:onClick="pad1"
        app:layout_constraintBottom_toTopOf="@+id/pad4"
        app:layout_constraintEnd_toStartOf="@+id/pad2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:background="@drawable/orange_button"
        android:id="@+id/pad4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:onClick="pad4"
        app:layout_constraintBottom_toTopOf="@+id/pad7"
        app:layout_constraintEnd_toStartOf="@+id/pad5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pad1" />

    <Button
        android:background="@drawable/green_button"
        android:id="@+id/pad6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:onClick="pad6"
        app:layout_constraintBottom_toTopOf="@+id/pad9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pad5"
        app:layout_constraintTop_toBottomOf="@+id/pad3" />

    <Button
        android:background="@drawable/pink_button"
        android:id="@+id/pad5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="pad5"
        app:layout_constraintBottom_toTopOf="@+id/pad8"
        app:layout_constraintEnd_toStartOf="@+id/pad6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pad4"
        app:layout_constraintTop_toBottomOf="@+id/pad2" />

    <Button
        android:background="@drawable/green_button"
        android:id="@+id/pad7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:onClick="pad7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pad8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pad4" />

    <Button
        android:background="@drawable/purple_button"
        android:id="@+id/pad8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="pad8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pad9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pad7"
        app:layout_constraintTop_toBottomOf="@+id/pad5" />

    <Button
        android:background="@drawable/orange_button"
        android:id="@+id/pad9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:onClick="pad9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pad8"
        app:layout_constraintTop_toBottomOf="@+id/pad6" />
</android.support.constraint.ConstraintLayout>